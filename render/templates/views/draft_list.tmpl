{{define "title"}}Index{{end}}

{{define "main"}}

<a href="/admin">&larr; Back</a>
<br>
<hr>

<div class="h-feed">
{{ range .Entries }}
    <div class="h-entry">
        <hgroup>
            <h3>
                <a class="u-url" href="/posts/{{ .ID }}">
                    {{if .Title}}
                        {{ .Title }}
                    {{else}}
                        #
                    {{end}}
                </a>
            </h3>
        </hgroup>
    </div>
    <hr>
{{ end }}
</div>

<hr>
<nav class="row">
    {{ if not .FirstPage }}
        <div>
            <a href="?page={{ .PrevPage }}">Prev</a>
        </div>
    {{ end }}
    
    <div>Page {{.Page}}</div>

    {{ if not .LastPage }}
        <div>
            <a href="?page={{ .NextPage }}">Next</a>
        </div>
    {{ end }}
</nav>
{{end}}